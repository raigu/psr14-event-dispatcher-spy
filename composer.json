{
    "name": "raigu/psr14-event-dispatcher-spy",
    "description": "PSR-14 event dispatcher implementation for testing if the subject under test is emitting expected event.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rait Kapp"
        }
    ],
    "autoload": {
        "psr-4": {
            "Raigu\\TestDouble\\Psr14\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Raigu\\TestDouble\\Psr14\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4||^8.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "specification": "./vendor/bin/phpunit --testdox",
        "coverage": "./vendor/bin/phpunit --coverage-text"
    }
}
